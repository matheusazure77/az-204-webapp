@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">This is a list of produts for demo</h1>
    @if (Model.IsBeta)
    {
        <h3 class="display-4">This is the beta version of the application</h3>
    }
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product Id</th>
                <th>Product Name</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var product in Model.Products)
            {
                <tr>
                    <th scope="row">@product.ProductID</th>
                    <th>@product.ProductName</th>
                    <th>@product.Quantity</th>
                </tr>    
            }
        </tbody>
    </table>
</div>
